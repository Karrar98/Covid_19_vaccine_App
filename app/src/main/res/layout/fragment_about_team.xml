                    android:text="@string/karrar_jabbar"
                    app:layout_constraintEnd_toEndOf="@+id/imgTeam2"
                    app:layout_constraintStart_toStartOf="@+id/imgTeam2"
                    app:layout_constraintTop_toBottomOf="@+id/imgTeam2" />

                <TextView
                    android:id="@+id/txtTypeTeam2"
