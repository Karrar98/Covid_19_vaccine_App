<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/distance_200"
    android:layout_margin="@dimen/distanceNormal"
    app:cardCornerRadius="@dimen/distanceNormal"
    app:cardElevation="@dimen/distanceVerySmall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCorona"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_0"
            android:layout_weight="1"
            android:padding="@dimen/distanceSmall" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/distanceSmall"
            android:text="@string/corona"
            android:textAlignment="center"
            android:textColor="#160E2C"
            android:textSize="@dimen/textSizeTitle" />

    </LinearLayout>

</androidx.cardview.widget.CardView>