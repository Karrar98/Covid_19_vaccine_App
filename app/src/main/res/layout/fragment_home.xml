<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:id="@+id/root"
    tools:context=".HomeActivity"
    android:background="#edf0f3">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:fitsSystemWindows="true"
        android:background="#edf0f3">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <ImageView
                android:id="@+id/doctors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-60dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/vaccinationcovid1"
                app:layout_collapseMode="parallax"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar_home_fragment"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Covid-19 Statistics"
                android:gravity="center"
                android:layout_gravity="bottom"
                app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shaperelativlayout"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subconstraint"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|top"
            android:paddingBottom="64dp"
            android:background="@drawable/shaperelativlayout">

            <TextView
                android:id="@+id/txtTitle"
                style="@style/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coronavirus_pandemic_covid_19"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dataCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle">

                <ImageView
                    android:id="@+id/previousCountry"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotation="270"
                    android:src="@drawable/ic_expand"
                    app:layout_constraintBottom_toBottomOf="@+id/txtCountryName"
                    app:layout_constraintEnd_toStartOf="@+id/txtCountryName"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtCountryName" />

                <ImageView
                    android:id="@+id/nextCountry"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotation="90"
                    android:src="@drawable/ic_expand"
                    app:layout_constraintBottom_toBottomOf="@+id/txtCountryName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.8"
                    app:layout_constraintStart_toEndOf="@+id/txtCountryName"
                    app:layout_constraintTop_toTopOf="@+id/txtCountryName" />

                <TextView
                    android:id="@+id/txtCountryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="12dp"
                    android:text="Iraq"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtIsoCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="12dp"
                    android:paddingStart="0dp"
                    android:text="Iraq"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtCountryName"
                    app:layout_constraintStart_toEndOf="@+id/txtCountryName" />

                <TextView
                    android:id="@+id/people_vaccine"
                    style="@style/textViewParagraph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="20.5%"
                    android:textColor="#0a007d"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtIsoCode"
                    app:layout_constraintEnd_toStartOf="@+id/txt_vaccine"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txt_vaccine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="@string/people_vaccine"
                    android:textColor="#0a007d"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toBottomOf="@+id/people_vaccine"
                    app:layout_constraintStart_toEndOf="@+id/people_vaccine"
                    app:layout_constraintTop_toTopOf="@+id/people_vaccine" />

                <TextView
                    android:id="@+id/people_fully_vaccine"
                    style="@style/textViewParagraph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="20.5%"
                    android:layout_marginTop="12dp"
                    android:textColor="#0a007d"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/people_vaccine"
                    app:layout_constraintEnd_toStartOf="@+id/txt_fully_vaccine"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txt_fully_vaccine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="@string/fully_vaccine"
                    android:textColor="#0a007d"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/people_fully_vaccine"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/people_fully_vaccine"
                    app:layout_constraintTop_toTopOf="@+id/people_fully_vaccine" />

                <TextView
                    android:id="@+id/people_total_vaccine"
                    style="@style/textViewParagraph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:text="20.5%"
                    android:textColor="#0a007d"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/people_fully_vaccine"
                    app:layout_constraintEnd_toStartOf="@+id/txt_total_vaccine"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txt_total_vaccine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="@string/total_vaccine"
                    android:textColor="#0a007d"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/people_total_vaccine"
                    app:layout_constraintTop_toTopOf="@+id/people_total_vaccine" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <org.eazegraph.lib.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:elevation="4dp"
                android:padding="8dp"
                app:egLegendTextSize="18sp"
                app:egUsePieRotation="true"
                app:egValueTextSize="36sp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dataCountry" />

            </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>