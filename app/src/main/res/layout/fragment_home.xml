<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:id="@+id/root"
    tools:context=".HomeActivity"
    android:background="#edf0f3">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:fitsSystemWindows="true"
        android:background="#edf0f3">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <ImageView
                android:id="@+id/doctors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-60dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/vaccinationcovid1"
                app:layout_collapseMode="parallax"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar_home_fragment"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Covid-19 Statistics"
                android:gravity="center"
                android:layout_gravity="bottom"
                app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shaperelativlayout"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subconstraint"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|top"
            android:background="@drawable/shaperelativlayout">

            <TextView
                android:id="@+id/titleOfApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:letterSpacing="0.05"
                android:text="@string/title"
                android:textColor="#215acb"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand"
                app:layout_constraintBottom_toTopOf="@+id/relativeCountrylayer1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleOfApp" />

            <RelativeLayout
                android:id="@+id/relativeCountrylayer1"
                android:layout_width="357dp"
                android:layout_height="86dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="100dp"
                android:alpha="0.8"
                android:background="@drawable/shapeofcountry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </RelativeLayout>

            <TextView
                android:id="@+id/textcountry"
                android:layout_width="155dp"
                android:layout_height="57dp"
                android:gravity="center"
                android:text="Country"
                android:textColor="@color/black"
                android:layout_marginStart="-10dp"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/relativeCountrylayer1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/relativeCountrylayer1" />

            <TextView
                android:id="@+id/CountryName"
                android:layout_width="203dp"
                android:layout_height="53dp"
                android:layout_marginEnd="10dp"
                android:elevation="8dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Iraq"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/textcountry"
                app:layout_constraintEnd_toEndOf="@+id/relativeCountrylayer1"
                app:layout_constraintTop_toTopOf="@+id/textcountry" />


            <RelativeLayout
                android:id="@+id/relativeDailyVaccinationLayer"
                android:layout_width="357dp"
                android:layout_height="86dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="210dp"
                android:alpha="0.8"
                android:background="@drawable/shapeofcountry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </RelativeLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="155dp"
                android:layout_height="57dp"
                android:gravity="center|top"
                android:text="@string/daily_n_vaccinations"
                android:textColor="@color/black"
                android:layout_marginStart="7dp"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/relativeDailyVaccinationLayer"
                app:layout_constraintTop_toTopOf="@+id/relativeDailyVaccinationLayer"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/noDailyVaccination"
                android:layout_width="203dp"
                android:layout_height="53dp"
                android:elevation="8dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="1,987,728"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/relativeDailyVaccinationLayer"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <RelativeLayout
                android:id="@+id/relativeFullVaccinationLayer1"
                android:layout_width="357dp"
                android:layout_height="86dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="320dp"
                android:alpha="0.8"
                android:background="@drawable/shapeofcountry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </RelativeLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="155dp"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                android:gravity="center|top"
                android:text="@string/people_fully_vaccinated"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/relativeFullVaccinationLayer1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/relativeFullVaccinationLayer1" />

            <TextView
                android:id="@+id/NoPeopleFully"
                android:layout_width="203dp"
                android:layout_height="53dp"
                android:elevation="8dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="23,647,898"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/relativeFullVaccinationLayer1"
                app:layout_constraintTop_toTopOf="@+id/textView4" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="397dp"
                android:layout_height="1733dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintBottom_toBottomOf="@+id/relativeFullVaccinationLayer1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeFullVaccinationLayer1"
                app:layout_constraintVertical_bias="0.304">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>