<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covid19VaccineApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--      style btn search  -->
    <style name="btnSearchCountry">
        <item name="android:background">@drawable/box_search_view</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">left</item>
        <item name="android:hint">Search Here</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:translationZ">40dp</item>
        <item name="android:elevation">60dp</item>
    </style>

    <!--  style text bold  -->
    <style name="bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!--  style search view city   -->
    <style name="searchViewCity">
        <item name="android:background">@drawable/box_search_view</item>
        <item name="android:queryBackground">@android:color/transparent</item>
    </style>

    <!--  style display text search  -->
    <style name="textDisplaySearch">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="textViewParagraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#160E2C</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#160E2C</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>