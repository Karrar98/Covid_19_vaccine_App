<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covid19VaccineApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

<!--      style btn search  -->
    <style name="btnSearchCountry">
        <item name="android:background">@drawable/box_search_view</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">left</item>
        <item name="android:hint">Search Here</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:translationZ">40dp</item>
        <item name="android:elevation">60dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSplashscreenContent" tools:targetApi="o">@drawable/ic_vaccine</item>
        <item name="android:statusBarColor">#edf0f3</item>
    </style>


    <!--  style search view city   -->
    <style name="searchViewCity">
        <item name="android:background">@drawable/box_search_view</item>
        <item name="android:queryBackground">@android:color/transparent</item>
    </style>

    <!--  style display text search  -->
    <style name="textDisplaySearch">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="textViewParagraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#160E2C</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#160E2C</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textNameTeam">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#160E2C</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textTypeTeamParagraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#160E2C</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>